@model List<FoodySite.DataAccess.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2>Ürün Listesi</h2>
    <br /> <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Resim</th>
            <th>Eski Fiyat</th>
            <th>Yeni Fiyat</th>
            <th>Kategori</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.ImageUrl</td>
                <td>@item.OldPrice</td>
                <td>@item.NewPrice</td>
                <td>@item.Category?.CategoryName</td>
                <td>
                    @if (item.Status == true)
                    {
                        <span class="bg-success p-1 text-white">Aktif</span>
                    }
                    else
                    {
                        <span class="bg-success p-1 text-white">Pasif</span>
                    }
                </td>
                <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Ekle</a>
</div>

