@model FoodySite.DataAccess.Models.Product


<div class="container-xxl py-5">
    <div class="container">
        @await Component.InvokeAsync("NavbarComponentPartial")
        <div class="row">
            <div class="tab-content">

                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="product-item">
                                <div class="position-relative bg-light overflow-hidden">
                                    <img class="img-fluid w-100" src="~/foody2-1.0.0/img/@Model.ImageUrl" style="height:200px !important" alt="">
                                </div>
                                <div class="text-center p-4">
                                    <a class="d-block h5 mb-2" href="">@Model.ProductName</a>
                                    <span class="text-primary me-1">@Model.NewPrice</span>
                                    <span class="text-body text-decoration-line-through">@Model.OldPrice</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-text">Ürünlerimiz, doğrudan üreticilerden temin edilerek, özenle paketlenerek sizlere ulaştırılacaktır.</p>
                                <small class="w-50 text-center py-2">
                                    <a class="text-body" href=""><i class="fa fa-shopping-bag text-primary me-2"></i>Sepete Ekle</a>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
